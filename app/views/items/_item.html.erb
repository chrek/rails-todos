<div class="row clearfix">
  <% if item.completed? %>
    <div class="complete">
      <%= link_to complete_todo_item_path(@todo, item.id), method: :patch do %>
        <i style="opacity: 0.4;" class="fa fa-check"></i>
      <% end %>
    </div>
    <div class="item">
      <p style="opacity: 0.4;"><s><%= item.content %></s></p>
    </div>
    <div class="trash">
      <%= link_to todo_item_path(@todo, item.id), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    </div>
  <% else %>
    <div class="complete">
      <%= link_to complete_todo_item_path(@todo, item.id), method: :patch do %>
        <i class="fa fa-clock-o" aria-hidden="true"></i>
      <% end %>       
    </div>
    <div class="item">
      <p><%= item.content %></p>
    </div>
    <div class="trash">
      <%= link_to todo_item_path(@todo, item.id), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    </div>
  <% end %>
</div>